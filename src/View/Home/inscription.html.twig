{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Inscription{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/inscription.css">{% endblock %}
{% block content %}
    <header class="inscriptionHeader">
        <h1 class="title-light">Tarifs et inscription</h1>
    </header>
    <section class="inscriptionForm">

        <form action="" method="post" novalidate>
            <div class="imageTitle">
                <img class="image" src="/assets/images/chess-pieces.svg" alt="Tour échec">
                <h2 class="title-light">Inscription</h2>
                <img class="image" src="/assets/images/chess-pieces.svg" alt="Tour échec">
            </div>
            {% for error in errors %}
                {{ error }}
            {% endfor %}
            <div class="row">
                <div class="col-md-5 offset-md-1 ">
                    <div class="form-group">
                        <label for="inputFirstname">Prénom</label>
                        <input type="text" id="inputFirstname" class="form-control" name="inputFirstname" placeholder="Martin" required>
                    </div>
                    <div class="form-group">
                        <label for="inputLastname">Nom</label>
                        <input type="text" id="inputLastname" class="form-control" name="inputLastname" placeholder="Paul" required>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" id="inputEmail" class="form-control" name="inputEmail" placeholder="martin.paul@email.com " required>
                    </div>
                    <div class="form-group">
                        <label for="inputBirthday">Date de naissance</label>
                        <input type="date" id="inputBirthday" class="form-control" name="inputBirthday" id="inputBirthday"
                               min="1920-01-01" max="2015-01-05" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Adresse</label>
                        <input type="text" id="inputAddress" class="form-control" name="inputAdress" id="inputAddress" placeholder="2 rue du clos" required>
                    </div>
                    <div class="form-group">
                        <label for="inputPostalCode">Code Postal</label>
                        <input type="text" id="inputPostalCode" class="form-control" name="inputPostalCode" id="inputPostalCode" placeholder="45000" required>
                    </div>
                    <div class="form-group">
                        <label for="inputCity">Ville</label>
                        <input type="text" id="inputCity" class="form-control" name="inputCity" id="inputCity" placeholder="Orléans" required>
                    </div>
                    <div class="button">
                        <button type="submit" class="button-dark">S'inscrire</button>
                    </div>
                </div>
                <div class="card col-3 offset-2 h-50 mt-50">
                    <div class="card-body">
                        <h5 class="card-title">Vous préférez le papier ?</h5>
                        <p class="card-text">Pas de problème, voici notre formulaire de contact !</p>
                        <a href="/assets/Documents/registration_form.jpg"
                           download="/assets/Documents/registration_form.jpg"
                           title="Télécharger le formulaire PDF"
                           class="button-light">Télécharger</a>
                    </div>
                </div>
            </div>
        </form>
    </section>
{% endblock %}
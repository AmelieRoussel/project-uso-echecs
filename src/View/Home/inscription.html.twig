{% extends 'layout.html.twig' %}
{% block title %}{{ parent() }} | Inscription{% endblock %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/inscription.css">{% endblock %}
{% block content %}
    <h2>Inscription</h2>
    <form>
        <div class="row">
            <div class="col-5 offset-1">
                <div class="">
                    <label class="form-group" for="inputFirstname">Prénom</label>
                    <input type="text" class="form-control" placeholder="Entrez votre prénom">
                </div>
                <div class="">
                    <label class="form-group" for="inputLastname">Nom</label>
                    <input type="text" class="form-control" placeholder="Entrez votre nom">
                </div>
                <div class="">
                    <label class="form-group" for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4" placeholder="Entrez votre Email ">
                </div>
                <div class="">
                    <label class="form-group" for="inputBirthday">Date de naissance</label>
                    <input type="text" class="form-control" id="inputBirthday" placeholder="Entrez votre date de naissance">
                </div>
                <div class="">
                    <label class="form-group col" for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="Entrez votre adresse">
                </div>
                <div class="">
                    <label class="form-group col" for="inputPostalCode">Code Postal</label>
                    <input type="text" class="form-control" id="inputPostalCode" placeholder="Entrez votre code postal">
                </div>
                <div class="">
                    <label class="form-group col" for="inputCity">Ville</label>
                    <input type="text" class="form-control" id="inputCity" placeholder="Entrez votre ville">
                </div>
                <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>
            <div class="card col-3 offset-2">
                <div class="card-body">
                    <a href="/assets/Documents/registration_form.jpg"
                       download="/assets/Documents/registration_form.jpg"
                       title="Télécharger le formulaire en PDF"> Vous préférez le papier ? <br/> Pas de problème, voici notre formulaire d'inscription !</a>
                </div>
            </div>
        </div>
    </form>


{% endblock %}
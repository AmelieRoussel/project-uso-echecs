{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/competition.css">
{% endblock %}

{% block content %}
    <section class="archive">
        <h2 class="title-light">Archives</h2>
        <div class="container-fluid">
            <div class="row justify-content-around">
                {% for competition in competitions %}
                    <div class="card col-12 col-sm-12 col-md-3 col-lg-3">
                        <img src="{{ competition.picture }}" alt="Image archive">
                        <div class="card-body">
                            <h3 class="card-title">{{ competition.name }}</h3>
                            <p class="card-date icon-before-date">{{ competition.date|date("d m Y") }}</p>
                            <p class="card-position icon-before-position">{{ competition.address }}</p>
                            <a href="#" class="btn btn-primary button-light">Voir les r√©sultats</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}